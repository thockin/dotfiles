[user]
	name = Tim Hockin
	email = thockin@google.com
[credential]
	helper = cache --timeout=315360000
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	revert = checkout --
	amend = commit --amend
	amx = commit --amend
	ama = commit --amend -a
	curbr = rev-parse --abbrev-ref HEAD
	root = rev-parse --show-toplevel
	mbr = "!f() { git remote set-head upstream --auto >/dev/null && git symbolic-ref refs/remotes/upstream/HEAD | cut -f4 -d/; }; f"
	fup = fetch upstream
	rb = rebase
	rbup = "!f() { git rebase upstream/$(git mbr); }; f"
	po = push origin
	pocur = !git po $(git curbr)
	pofcur = !git po -f $(git curbr)
	wdiff = diff --color-words
	track = "!f() { git fetch origin $1 && git co -b $1 origin/$1; }; f"
	copr = "!f() { git fetch upstream pull/$1/head:pr-$1; git co pr-$1;}; f"
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
	my = "!f() { git log --reverse --format='format:%C(auto)%H  %s' upstream/master..HEAD; echo;}; f"
[merge]
	conflictstyle = diff3
[http "https://gopkg.in"]
	followRedirects = true
